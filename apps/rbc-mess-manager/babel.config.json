{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@global": "./src/app/global",
          "@components": "./src/app/components",
          "@screens": "./src/app/screens",
          "@utils": "./src/app/utils",
          "@store": "./src/app/store",
          "@assets": "./src/assets",
          "@navigation": "./src/app/navigation"
        }
      }
    ]
  ]
}
